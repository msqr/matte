<?xml version="1.0"?>
<ehcache>
    
	<diskStore path="java.io.tmpdir"/>
       
	<defaultCache
		maxElementsInMemory="5000"
		eternal="false"
		timeToIdleSeconds="1800"
		timeToLiveSeconds="3600"
		overflowToDisk="false"
		diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120"
	/>
	
	<cache name="magoffin.matt.xweb.app_settings_cache"
		maxElementsInMemory="1"
		timeToIdleSeconds="600"
		timeToLiveSeconds="1800"
		overflowToDisk="false"
		diskPersistent="false"
	/>
	
	<!-- Cache for ShadowServer shadow PNG images -->
	<cache name="magoffin.matt.ma2.web.ShadowServer.CACHE"
		maxElementsInMemory="50"
		timeToIdleSeconds="3600"
		timeToLiveSeconds="7200"
		overflowToDisk="true"
		diskPersistent="true"
		diskExpiryThreadIntervalSeconds="120"
	/>
	
	<!-- Cache for XML schemas -->
	<cache name="magoffin.matt.ma2.SCHEMA"
		maxElementsInMemory="10"
		timeToIdleSeconds="3600"
		timeToLiveSeconds="7200"
		overflowToDisk="false"
		diskPersistent="false"
	/>
	
	<!-- Cache for MediaItem security -->
	<cache name="magoffin.matt.ma2.security.MEDIA_ITEM"
		maxElementsInMemory="5000"
		timeToIdleSeconds="3600"
		timeToLiveSeconds="7200"
		overflowToDisk="false"
		diskPersistent="false"
	/>
	
	<!-- 
		[magoffin.matt.ma2.domain.User]; using defaults.
		[magoffin.matt.ma2.domain.MediaItemType]; using defaults.
		[magoffin.matt.ma2.domain.UserComment]; using defaults.
		[magoffin.matt.ma2.domain.Metadata]; using defaults.
		[magoffin.matt.ma2.domain.MediaItemRating]; using defaults.
		[magoffin.matt.ma2.domain.Album]; using defaults.
		[magoffin.matt.ma2.domain.TimeZone]; using defaults.
		[magoffin.matt.ma2.domain.Theme]; using defaults.
		[magoffin.matt.ma2.domain.MediaItem]; using defaults.
		[magoffin.matt.ma2.domain.Collection]; using defaults.
		[magoffin.matt.ma2.domain.Album.Album]; using defaults.
		[magoffin.matt.ma2.domain.MediaItem.UserComment]; using defaults.
		[magoffin.matt.ma2.domain.MediaItem.UserRating]; using defaults.
